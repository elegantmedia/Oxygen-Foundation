<?xml version="1.0"?>
<ruleset name="elegantmedia/oxygen-foundation">
	<description>The coding standard for package</description>

	<!-- Use the PSR12 Standard -->
	<!-- Use tabs instead of spaces -->
	<arg name="tab-width" value="4"/>
	<rule ref="PSR12">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
	</rule>
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
	<rule ref="Generic.WhiteSpace.ScopeIndent">
		<properties>
			<property name="indent" value="4"/>
			<property name="tabIndent" value="true"/>
		</properties>
	</rule>

	<!-- override line-length -->
	<rule ref="Generic.Files.LineLength">
		<properties>
			<!-- soft limit shown as a warning -->
			<property name="lineLimit" value="140"/>
			<!-- hard limit (0 = disabled) -->
			<property name="absoluteLineLimit" value="0"/>
		</properties>
	</rule>

	<arg value="p" />

	<config name="ignore_warnings_on_exit" value="1" />
	<config name="ignore_errors_on_exit" value="1" />

	<arg name="colors" />
	<arg value="s" />

	<exclude-pattern>/laravel/database/migrations/*</exclude-pattern>
	<exclude-pattern>/tests/TestPackage/database/migrations/*</exclude-pattern>
	<exclude-pattern>*.blade.php</exclude-pattern>
</ruleset>
